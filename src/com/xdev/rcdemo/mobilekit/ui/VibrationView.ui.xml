<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?xdevuiml version="1.0"?>
<?template APPLE_IPHONE_6?>
<?import com.xdev.rcdemo.mobilekit.ui.NavBar?>
<?import com.xdev.ui.XdevButton?>
<?import com.xdev.ui.XdevGridLayout?>
<?import com.xdev.ui.XdevTextField?>
<?import com.xdev.ui.XdevView?>
<XdevView xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="VibrationView">
    <x:constraints zpos="0" width="100%" height="100%" />
    <XdevGridLayout x:name="gridLayout">
        <x:constraints zpos="0" width="100%" height="100%" />
        <NavBar title="Vibration" x:name="navBar">
            <x:constraints gridx="1" gridy="1" weighty="0.0" weightx="0.1" width="100%" />
        </NavBar>
        <XdevButton caption="Vibrate 1 sec" x:name="cmdVibrateSimple">
            <x:constraints gridx="1" gridy="2" weighty="0.0" weightx="0.1" width="100%" />
            <x:event>click.buttonClick</x:event>
        </XdevButton>
        <XdevTextField columns="20" caption="Pattern:" x:name="txtPattern" value="500 200 300">
            <x:constraints gridx="1" gridy="3" weighty="0.0" weightx="0.1" width="100%" />
        </XdevTextField>
        <XdevButton caption="Vibrate Pattern" x:name="cmdVibratePattern">
            <x:constraints gridx="1" gridy="4" weighty="0.0" weightx="0.1" width="100%" />
            <x:event>click.buttonClick</x:event>
        </XdevButton>
    </XdevGridLayout>
</XdevView>

